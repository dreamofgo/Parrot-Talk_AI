.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.msg-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.msg-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.user-msg {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  border-radius: 50%;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.msg-content {
  max-width: 60%;
  padding: 20rpx;
  border-radius: 10rpx;
  word-break: break-all;
}

.user-msg .msg-content {
  background: #007AFF;
  color: white;
  border-radius: 20rpx 0 20rpx 20rpx;
}

.bot-msg .msg-content {
  background: white;
  border-radius: 0 20rpx 20rpx 20rpx;
}

.input-area {
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #eee;
}

.input-box {
  display: flex;
  align-items: center;
}

.input-box input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
}

.btn-group {
  display: flex;
  margin-left: 20rpx;
}

.voice-btn, .send-btn {
  width: 72rpx;
  height: 72rpx;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-btn image {
  width: 40rpx;
  height: 40rpx;
}

.send-btn {
  background: #007AFF;
  color: white;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.recording-btn {
  background: #07C160;
  color: white;
  transition: all 0.3s;
}

.recording-btn.recording {
  background: #E64340;
  transform: scale(0.95);
} 