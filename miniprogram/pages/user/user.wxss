.user-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.user-info {
  padding: 30rpx;
}

.user-header {
  position: relative;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 160rpx;
  background: linear-gradient(to right, #2b87ff, #4499ff);
}

.user-info-content {
  position: relative;
  padding: 40rpx;
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  padding: 0;
  width: 120rpx !important;
  height: 120rpx !important;
  border-radius: 60rpx;
  background: none;
  border: none;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.user-detail {
  flex: 1;
  margin-left: 30rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  margin-bottom: 30rpx;
  background: #fff;
}

.input-placeholder {
  color: #999;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #2b87ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.stats-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.user-header-logged {
  position: relative;
  margin-bottom: 30rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-top: 10rpx;
}

.section-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-header {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.doc-item, .chat-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s;
}

.doc-item:active, .chat-item:active {
  background-color: #f9f9f9;
}

.doc-item:last-child, .chat-item:last-child {
  border-bottom: none;
}

.doc-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.doc-time, .chat-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.chat-content {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.6;
}

/* 登录相关样式 */
.login-section {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 200rpx 40rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -60%);
  width: 80%;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.auth-title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 20rpx;
}

.auth-subtitle {
  font-size: 28rpx;
  color: #888;
  text-align: center;
  margin-bottom: 40rpx;
}

.auth-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #eee;
}

.wechat-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.auth-info {
  flex: 1;
}

.auth-name {
  font-size: 32rpx;
  margin-bottom: 6rpx;
}

.auth-desc {
  font-size: 26rpx;
  color: #888;
}

.check-icon {
  width: 40rpx;
  height: 40rpx;
}

.cancel-btn {
  text-align: center;
  font-size: 32rpx;
  color: #576b95;
}

.button-hover {
  opacity: 0.9;
}

.default-section {
  padding: 30rpx;
}

.default-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.avatar-wrapper {
  background: none;
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.avatar-wrapper::after {
  border: none;
}

.default-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.login-text {
  font-size: 32rpx;
  color: #333;
}

.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.auth-content {
  width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
}

.confirm-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #2b87ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;
  margin: 30rpx 0 20rpx;
} 